<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAvatar"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="2dp"
        android:scaleY="1"
        android:scaleX="1"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon"
            android:layout_marginRight="5dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvFulName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cvAvatar"
        android:hint="@string/tv_undefined"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/tvDate"
        android:maxLines="1"/>

        <RatingBar
            android:id="@+id/rvUserVote"
            android:numStars="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:transformPivotX="0dp"
            android:layout_toRightOf="@+id/cvAvatar"
            android:layout_below="@id/tvFulName"
            style="?android:attr/ratingBarStyleIndicator"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tv_undefined"
            android:layout_alignParentRight="true"
            android:textSize="9sp"
            android:padding="5dp"/>

    <TextView
        android:id="@+id/tvExperience"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvAvatar"
        android:padding="4dp"
        android:textSize="11dp"
        android:hint="@string/tv_text_lorem"
        android:maxLines="2" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:layout_below="@+id/tvDate"
        android:scaleType="centerCrop"
        android:src="@mipmap/btn_delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"/>
</RelativeLayout>