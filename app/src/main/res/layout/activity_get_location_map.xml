<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/marcoPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".views.mapsViews.GetLocationMapActivity"/>

            <SearchView
                android:id="@+id/etSearch"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="@string/search_Address"
                android:iconifiedByDefault="true"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/edit_text_transparent"
                android:layout_below="@id/etSearch">
                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="7sp"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="7sp"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="0dp">

            <Spinner
                android:id="@+id/spTypesOfMaps"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#B374CFF8"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/btnSet"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Establecer"
                android:background="#B38BC34A"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:padding="0dp"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:paddingStart="3dp"
                android:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#B3FF5722"
                android:padding="0dp"
                android:text="Volver"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textAlignment="textStart"
                android:paddingStart="3dp"
                android:textSize="14sp"
                android:autoSizeTextType="none"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>





