<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.platesViews.PlateViewActivity"
        android:background="#fff"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnPrevious"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/icon_next"
                        android:scaleX="-1"
                        android:layout_weight="2"
                        android:visibility="visible"
                        android:paddingRight="2dp"
                        android:layout_marginRight="2dp"/>

                    <ViewFlipper
                        android:id="@+id/vfCarrucel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:outAnimation="@android:anim/slide_out_right"
                        android:animateFirstView="true"
                        android:layout_weight="8"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:scaleY="1"
                            android:scaleX="1"
                            android:layout_gravity="center">

                            <!--                Imagen con zoom-->
                            <com.zolad.zoominimageview.ZoomInImageView
                                android:id="@+id/ziivPhoto"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/img_photo"/>

                        </androidx.cardview.widget.CardView>
                    </ViewFlipper>

                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_next"
                        android:layout_weight="2"
                        android:padding="0dp"
                        android:visibility="visible"/>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del restaurante"
                    android:textSize="20dp"
                    android:gravity="center"
                    style="@style/CodeFontContentTitle"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Propietario"
                        style="@style/CodeFontContentTitle"/>
                    <TextView
                        android:id="@+id/tvOwner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fernando Fernandez Fuentes"
                        style="@style/CodeFontContent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        style="@style/CodeFontContentTitle"/>
                    <TextView
                        android:id="@+id/tvPhones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4386994"
                        style="@style/CodeFontContent"/>
                </LinearLayout>

            </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección"
                        style="@style/CodeFontContentTitle"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avenida Belging esquina Blanco galindo km 3"
                        android:layout_marginHorizontal="10dp"
                        style="@style/CodeFontContent"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        style="@style/CodeFontContentTitle"/>
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avenida Belging esquina Blanco galindo km 3"
                        android:layout_marginHorizontal="10dp"
                        style="@style/CodeFontContent"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginHorizontal="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Menú"
                        style="@style/CodeFontContentTitle"/>
<!--                    android:layout_toLeftOf="@+id/btnMenuEdit"-->

                    <ImageButton
                        android:id="@+id/btnMenuEdit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/edit_icon_black"
                        android:layout_toRightOf="@+id/tvMenu"
                        android:background="#00FFFFFF"/>
                </RelativeLayout>

                <ListView
                    android:id="@+id/menuList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <Button
                    android:id="@+id/btnVisitar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Visitar"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </ScrollView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/sabores"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/sabores"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:rotationY="180"
            android:rotationX="180"/>

    </RelativeLayout>
