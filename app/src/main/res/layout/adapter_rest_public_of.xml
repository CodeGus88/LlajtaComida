<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvUndefined"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ivImage"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvUndefined"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tvUndefined"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvUndefined"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tvRestInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvUndefined"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPublish"
        android:layout_alignTop="@+id/ivImage"
        android:drawableLeft="@drawable/icon_public"
        android:textColor="#fff"
        android:background="#8BC34A"
        android:padding="2dp"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_icon"
        android:layout_alignTop="@+id/ivImage"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/icon_delete"
        android:textColor="#fff"
        android:background="#FF5722"
        android:padding="2dp"/>

</RelativeLayout>