<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPromotion"
    android:padding="5dp"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center">
                   <LinearLayout
                       android:id="@+id/ll"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           app:cardCornerRadius="10dp">
                           <ImageView
                               android:id="@+id/ivPlateImage"
                               android:layout_width="300dp"
                               android:layout_height="200dp"
                               app:srcCompat="@drawable/image_icon"
                               android:layout_gravity="center"/>
                       </androidx.cardview.widget.CardView>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/tvPlateName"
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:text="@string/tv_undefined"
                       android:textColor="#FFF176"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:layout_alignBottom="@+id/ll"
                       android:background="#54000000"
                       android:layout_marginBottom="5dp"
                       android:padding="5dp"/>

               </RelativeLayout>
                <TextView
                    android:id="@+id/tvPromotionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_undefined"
                    android:textSize="25dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:textIsSelectable="true"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/promotion_description"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:gravity="start"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"/>
                    <TextView
                        style="@style/CodeFontContent"
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_undefined"
                        android:textColor="#ffffff"
                        android:textIsSelectable="true"
                        android:justificationMode="inter_word"/>
                </LinearLayout>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_before"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvBeforePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transformPivotX="0dp"
                        android:text="@string/tv_undefined"
                        android:textColor="#ffffff"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_now"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvNowPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:justificationMode="inter_word"
                        android:text="@string/tv_undefined"
                        android:textColor="#ffffff"
                        android:textIsSelectable="true"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_ingredients_plate_view"
                style="@style/CodeFontContentTitle"
                android:textColor="#ffffff"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"/>

            <TextView
                style="@style/CodeFontContent"
                android:id="@+id/tvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/lorem_long"
                android:textColor="#ffffff"
                android:justificationMode="inter_word"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="11dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_origin_plate_view"
                style="@style/CodeFontContentTitle"
                android:textColor="#ffffff"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"/>
            <TextView
                style="@style/CodeFontContent"
                android:id="@+id/tvOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/lorem_long"
                android:textColor="#ffffff"
                android:justificationMode="inter_word"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="80dp"/>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="4dp"
        android:layout_alignBottom="@+id/sv"
        android:background="@color/colorPromotion">
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_close"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/btn_information"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnShowPlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_plate"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/btn_information"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
</RelativeLayout>