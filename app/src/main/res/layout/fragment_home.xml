<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.main.HomeFragment"
    android:orientation="vertical"
    android:background="@mipmap/font_2">

        <LinearLayout
            android:id="@+id/llfontTitle"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/font_title_home"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:clickable="true" >
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_marginTop="28dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_welcome"
                android:textSize="20dp"
                android:textColor="#fff"
                android:justificationMode="inter_word"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="120dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/gastronomia_pre_colonial">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#AB000000"
                    android:padding="3dp">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:text="@string/tv_pre_colonial_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/qollqas_cotapachi"
                        android:scaleType="center"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="@string/tv_pre_colonial_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:textColor="#fff"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/gastronomia_colonial">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#AB000000"
                    android:padding="3dp">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:text="@string/tv_colonial_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/cochabamba_colonial"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="@string/tv_colonial_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:textColor="#fff"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/gastronomia_republicana">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#AB000000"
                    android:padding="3dp">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:text="@string/tv_republicana_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/cochabamba_republicana"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="@string/tv_republicana_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:textColor="#fff"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_source"
                android:textSize="9dp"
                android:textStyle="italic"
                android:textColor="#A3A3A3"
                android:textAlignment="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>