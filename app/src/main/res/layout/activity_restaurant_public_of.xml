<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.restaurants.RestaurantPublicOfActivity"
    android:orientation="vertical"
    android:background="@drawable/list_panel_white_gradient">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:drawableEnd="@drawable/icon_search_black"
        android:inputType="textWebEditText"
        android:hint="@string/search_restaurants"
        android:visibility="gone"/>
   <ListView
       android:id="@+id/lvPublicOfRest"
       android:layout_marginTop="1dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/etSearch"
       android:background="@drawable/list_panel_white_gradient"/>

</RelativeLayout>