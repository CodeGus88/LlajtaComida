<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.plates.CreatePlateActivity"
    android:orientation="vertical"
    android:background="#2196F3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_creat_restaurant"
                android:textSize="25sp"
                android:textColor="#fff"
                android:gravity="center"
                android:fontFamily="serif"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/panel_gray"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_restaurant_name"
                        android:inputType="textWebEditText"
                        android:maxLength="50"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">
                    <EditText
                        android:id="@+id/etOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_owner_name"
                        android:gravity="left"
                        android:inputType="textPersonName"
                        android:maxLength="50"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="36">
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_phone"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:inputType="phone"
                        app:counterEnabled="true"
                        app:counterMaxLength="36"/>
                </com.google.android.material.textfield.TextInputLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:counterEnabled="true"
                    app:counterMaxLength="200">
                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_address"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:inputType="textWebEditText"
                        android:maxLength="200"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLatLon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:paddingHorizontal="4dp"
                    app:placeholderText="@string/tv_location"
                    app:placeholderTextColor="#03A9F4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/panel_white">
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleY="1"
                            android:scaleX="1"
                            android:layout_gravity="center">
                            <ImageButton
                                android:id="@+id/btnSetLocate"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/map_image"
                                android:layout_marginHorizontal="50dp"
                                android:background="@drawable/panel_gray"
                                android:padding="1dp"
                                android:foreground="?android:attr/selectableItemBackground"/>
                        </androidx.cardview.widget.CardView>
                        <!--                Botones de latitud y longitud-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/edit_text"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:padding="5dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_latitude"
                                    android:textStyle="bold"
                                    android:textSize="10dp"/>
                                <TextView
                                    android:id="@+id/tvLatitude"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/tv_lat_lng"
                                    android:textSize="10dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/edit_text"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:padding="5dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_longitude"
                                    android:textStyle="bold"
                                    android:textSize="10dp"/>
                                <TextView
                                    android:id="@+id/tvLongitude"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/tv_lat_lng"
                                    android:textSize="10dp"
                                    android:background="@drawable/edit_text"/>
                            </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="1500">
                    <EditText
                        android:id="@+id/etOriginAndDescriptiono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_origin_desc"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:maxLength="1500"/>
                </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/edit_text"
                    android:layout_gravity="center">
                            <Button
                                android:id="@+id/btnSelectPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/btn_photo_restaurant"
                                android:background="#00FFFFFF"
                                android:gravity="fill"
                                android:textAllCaps="false"
                                android:drawablePadding="5dp"
                                android:textStyle="italic"
                                android:drawableStart="@drawable/image_icon"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text"
                            android:paddingHorizontal="4dp"
                            app:placeholderText="@string/tv_photo"
                            app:placeholderTextColor="#03A9F4"
                            android:layout_marginBottom="10dp">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleY="1"
                                android:scaleX="1"
                                android:layout_gravity="center">
                                <ImageView
                                    android:id="@+id/ivPhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="#B98EABC3"
                                    android:src="@mipmap/image_icon"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>
                        </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbPublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cb_public"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:checked="false"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/btn_cancel"
                        android:layout_weight="1"
                        android:background="@drawable/btn_cancel"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"/>
                    <Button
                        android:id="@+id/btnStore"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/btn_store"
                        android:layout_weight="1"
                        android:background="@drawable/btn_continue"
                        android:textColor="#fff"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>