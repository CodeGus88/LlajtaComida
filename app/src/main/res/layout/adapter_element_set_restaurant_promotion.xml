<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/rlItem">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPhoto"
            android:layout_width="80dp"
            android:layout_height="54dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="4dp"
            android:layout_alignParentLeft="true"
            android:visibility="visible">
            <ImageView
                android:id="@+id/ivPhotoItem"
                android:layout_width="80dp"
                android:layout_height="54dp"
                app:srcCompat="@mipmap/image_icon"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



<!--    android:layout_toLeftOf="@+id/cbSelectItem"-->
    <TextView
        android:id="@+id/tvTitleItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/tv_undefined"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ll"
        android:layout_toLeftOf="@id/cvPrice"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:ellipsize="end"/>

<!--    android:layout_toLeftOf="@+id/cbSelectItem"-->

    <TextView
        android:id="@+id/tvPromotionTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:maxLines="2"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#AE636363"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvPromotionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleItem"
        android:maxLines="2"
        android:textSize="13dp"
        android:layout_toRightOf="@+id/ll"
        android:layout_toLeftOf="@id/cvPrice"
        android:paddingRight="1dp"/>



